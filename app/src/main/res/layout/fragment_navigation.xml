<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigationContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/vNavigationAppLogo"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_app_menu_logo"
        android:paddingBottom="@dimen/keyline_1"
        android:paddingTop="@dimen/keyline_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider_logo"/>

    <View
        android:id="@+id/divider_logo"
        style="@style/BottomSheetEntryDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vLateralNavigation" />

    <android.support.design.widget.NavigationView
        android:id="@+id/vLateralNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingStart="@dimen/keyline_1"
        android:paddingEnd="@dimen/keyline_1"
        app:itemBackground="@drawable/navigation_item_bg"
        app:itemIconPadding="@dimen/keyline_2"
        app:itemTextColor="@drawable/navigation_item_color"
        app:itemIconTint="@drawable/navigation_item_color"
        app:itemHorizontalPadding="@dimen/keyline_1"
        app:layout_constraintBottom_toTopOf="@id/divider_navigation"
        app:menu="@menu/lateral_navigation" />

    <View
        android:id="@+id/divider_navigation"
        style="@style/BottomSheetEntryDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSendFeedback" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btnSendFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_send_feedback"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:textColor="@color/gray_dark"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vForwardNavigation"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />

    <android.support.design.widget.NavigationView
        android:id="@+id/vForwardNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingStart="@dimen/keyline_1"
        android:paddingEnd="@dimen/keyline_1"
        app:itemBackground="@drawable/navigation_item_bg"
        app:itemIconPadding="@dimen/keyline_2"
        app:itemTextColor="@drawable/navigation_item_color"
        app:itemIconTint="@drawable/navigation_item_color"
        app:itemHorizontalPadding="@dimen/keyline_1"
        app:layout_constraintBottom_toTopOf="@id/vNavigationMenuFooter"
        app:menu="@menu/forward_navigation" />

    <include
        android:id="@+id/vNavigationMenuFooter"
        layout="@layout/navigation_menu_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>